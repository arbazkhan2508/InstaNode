                                 <% all.comment.forEach(function(cmt){ %>
                                    <% if(cmt.owner.name === user.name){ %>
                                        <a href="#">
                                            <div class="cmnt_div">
                                                <div class="Crow">
                                                    <div class="post_owner">
                                                         <div class="photu">
                                                              <img src="/getFile/<%= all.owner.userProfileimg %>" alt="">
                                                         </div>
                                                         <div class="Utxt">
