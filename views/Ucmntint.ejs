                                                                <img src="/getpost/<%= all.post %>" alt="">
                                                            <% } %>
                                                     </div>
                                                 </div>
                                                 <div class="who_comment">
                                                    <div class="who_pic">
                                                        <img src="/getFile/<%= cmt.owner.userProfileimg %>" alt="">
